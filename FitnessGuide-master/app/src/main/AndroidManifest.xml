<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.fitnessguide">
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-sdk
        android:maxSdkVersion="17"
        android:minSdkVersion="8" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".BMIActivity"/>
        <activity android:name=".AccelerometerActivity"/>
        <activity android:name=".OptionsActivity"/>
        <activity android:name=".DietHighActivity"/>
        <activity android:name=".DietNormalActivity"/>
        <activity android:name=".DietLowActivity"/>
        <activity android:name=".WorkoutNormalActivity"/>
        <activity android:name=".WorkoutHighActivity"/>
    </application>

</manifest>